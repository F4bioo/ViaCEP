<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.Ds" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ds_primary</item>
        <item name="colorPrimaryVariant">@color/ds_primary_dark</item>
        <item name="colorOnPrimary">@color/ds_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ds_teal_200</item>
        <item name="colorSecondaryVariant">@color/ds_teal_700</item>
        <item name="colorOnSecondary">@color/ds_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ds.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DsTextLarge" parent="TextAppearance.AppCompat.Large" />

    <style name="DsTextMedium" parent="TextAppearance.AppCompat.Medium" />

    <style name="DsTextSmall" parent="TextAppearance.AppCompat.Small" />

    <style name="DsTextMin" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/ds_text_size_01</item>
    </style>

    <style name="DsTextHighlightLarge" parent="TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DsTextHighlightMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DsTextHighlightSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
